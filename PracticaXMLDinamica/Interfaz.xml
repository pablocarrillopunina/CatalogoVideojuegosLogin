<?xml version="1.0" encoding="utf-8" ?>
<Interfaz>

	<!-- MENÚ SUPERIOR -->
	<MenuStrip nombre="menuPrincipal">

		<MenuItem texto="TIENDA" accion="nav"/>
		<MenuItem texto="COMUNIDAD" accion="nav"/>
		<MenuItem texto="SOPORTE" accion="nav"/>

		<!-- PERFIL alineado a la derecha -->
		<MenuItem texto="Mi perfil ▼">
			<MenuItem texto="Cerrar sesión" accion="logout"/>
			<MenuItem texto="Cerrar la aplicación" accion="exitApp"/>
		</MenuItem>

	</MenuStrip>


	<!-- PANEL PRINCIPAL -->
	<Panel nombre="panelPrincipal"
		   x="0" y="40" width="820" height="320"
		   backColor="#333333">

		<!-- TÍTULO -->
		<Control tipo="Label" nombre="lblTitulo" texto="Gestión de Catálogo de Videojuegos"
				 x="0" y="10" width="820" height="30"/>

		<!-- CAMPOS -->
		<Control tipo="Label" nombre="lblTituloJuego" texto="Título:"
				 x="40" y="80" width="140" height="25"/>
		<Control tipo="TextBox" nombre="txtTitulo" texto=""
				 x="200" y="80" width="550" height="25"/>

		<Control tipo="Label" nombre="lblDesarrollador" texto="Desarrollador:"
				 x="40" y="120" width="140" height="25"/>
		<Control tipo="TextBox" nombre="txtDesarrollador" texto=""
				 x="200" y="120" width="550" height="25"/>

		<Control tipo="Label" nombre="lblPlataforma" texto="Plataforma:"
				 x="40" y="160" width="140" height="25"/>
		<Control tipo="TextBox" nombre="txtPlataforma" texto=""
				 x="200" y="160" width="550" height="25"/>

		<Control tipo="Label" nombre="lblPrecio" texto="Precio:"
				 x="40" y="200" width="140" height="25"/>
		<Control tipo="TextBox" nombre="txtPrecio" texto=""
				 x="200" y="200" width="550" height="25"/>

		<!-- BOTONES -->
		<Control tipo="Button" nombre="btnAñadir" texto="Añadir"
				 x="180" y="245" width="110" height="35"/>
		<Control tipo="Button" nombre="btnEditar" texto="Modificar"
				 x="310" y="245" width="110" height="35"/>
		<Control tipo="Button" nombre="btnEliminar" texto="Eliminar"
				 x="440" y="245" width="110" height="35"/>

	</Panel>

	<!-- TABLA -->
	<DataGrid nombre="tablaDatos" x="40" y="380" width="820" height="190">
		<Columna nombre="ID" width="50"/>
		<Columna nombre="Titulo" width="200"/>
		<Columna nombre="Desarrollador" width="200"/>
		<Columna nombre="Plataforma" width="200"/>
		<Columna nombre="Precio" width="100"/>
	</DataGrid>

</Interfaz>
